*filter
:INPUT DROP [0:0]
:FORWARD DROP [0:0]
:OUTPUT DROP [0:0]
-A INPUT -m state --state RELATED,ESTABLISHED -j ACCEPT
-A INPUT -i lo -j ACCEPT

# drop DHCP request
-A INPUT -p udp -m udp --dport 67 -j DROP

# Allow SSH
-A INPUT -p tcp -m tcp --dport 22 -j ACCEPT

{% if iptables_input_filters is defined %}
{% for filter in iptables_input_filters %}
{%- if filter.comment is defined -%}
# {{ filter.comment }}
{% endif %}
-A INPUT {{ filter.rule }}
{% endfor %}
{% endif %}

# Log rejects
-I INPUT 5 -m limit --limit 5/min -j LOG --log-prefix "iptables denied: " --log-level 7

# Allow all outgoing
-A OUTPUT -j ACCEPT

# Reject all other inbound - default deny unless explicitly allowed policy
-A INPUT -j REJECT
-A FORWARD -j REJECT

COMMIT
