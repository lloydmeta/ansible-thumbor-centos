stop on stopped thumbor

respawn
respawn limit 5 10
umask 022

env USER={{thumbor_user}}

env DAEMON=/usr/bin/thumbor

env conffile={{thumbor_config_file}}
env keyfile={{thumbor_key_file}}
env ip={{thumbor_bind_address}}

chdir /var/lib/thumbor
instance $p
exec su -c "$DAEMON -c $conffile -i $ip -k $keyfile -p $p" $USER
